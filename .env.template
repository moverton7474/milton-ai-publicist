# Milton Overton AI Publicist - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# CORE LLM SERVICES
# ============================================================================

# Anthropic API (Claude) - REQUIRED
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API (Whisper transcription) - REQUIRED for voice notes
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# ============================================================================
# AI AVATAR GENERATION
# ============================================================================

# HeyGen API - REQUIRED for avatar videos
# Get from: https://app.heygen.com/settings/api-keys
HEYGEN_API_KEY=xxxxx
HEYGEN_AVATAR_ID=xxxxx  # Your specific avatar ID

# ============================================================================
# SOCIAL MEDIA PLATFORMS
# ============================================================================

# LinkedIn - Primary platform (REQUIRED)
LINKEDIN_EMAIL=milton.overton@example.com
LINKEDIN_PASSWORD=xxxxx

# Twitter/X - Secondary platform
TWITTER_API_KEY=xxxxx
TWITTER_API_SECRET=xxxxx
TWITTER_ACCESS_TOKEN=xxxxx
TWITTER_ACCESS_TOKEN_SECRET=xxxxx
TWITTER_BEARER_TOKEN=xxxxx

# Instagram - Optional (Graph API)
INSTAGRAM_ACCESS_TOKEN=xxxxx
INSTAGRAM_ACCOUNT_ID=xxxxx

# ============================================================================
# DATABASE & CACHE
# ============================================================================

# PostgreSQL - REQUIRED
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://milton_user:password@localhost:5432/milton_publicist

# Redis - REQUIRED for caching and task queue
# Format: redis://host:port/db
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# SECURITY & CREDENTIALS MANAGEMENT
# ============================================================================

# Credential Storage Method: vault | aws | local
# Production: use "vault" or "aws"
# Development: use "local"
CREDENTIAL_STORAGE=local

# HashiCorp Vault (if CREDENTIAL_STORAGE=vault)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=xxxxx
VAULT_NAMESPACE=milton-publicist

# AWS Secrets Manager (if CREDENTIAL_STORAGE=aws)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=xxxxx
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_SECRETS_PREFIX=milton-publicist/

# Local Encryption (if CREDENTIAL_STORAGE=local)
# Will be auto-generated if not provided
SECRET_KEY=xxxxx-random-secret-key-xxxxx

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable automated posting (default: False, requires approval)
ENABLE_AUTO_POSTING=false

# Enable HeyGen avatar video generation
ENABLE_AVATAR_GENERATION=true

# Enable media monitoring daemon
ENABLE_MEDIA_MONITORING=true

# Enable PR opportunity scanning
ENABLE_OPPORTUNITY_SCANNING=true

# Require human approval for all content (STRONGLY RECOMMENDED)
APPROVAL_REQUIRED=true

# ============================================================================
# SYSTEM LIMITS & SAFETY
# ============================================================================

# Maximum posts per day across all platforms
MAX_POSTS_PER_DAY=5

# Maximum API calls per minute (rate limiting)
MAX_API_CALLS_PER_MINUTE=60

# Minimum time between platform posts (minutes)
MIN_POST_SPACING_MINUTES=30

# Content generation timeout (seconds)
CONTENT_GENERATION_TIMEOUT=120

# ============================================================================
# MONITORING & ALERTING
# ============================================================================

# Prometheus metrics endpoint
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Grafana dashboard
GRAFANA_URL=http://localhost:3000

# PagerDuty (optional, for critical alerts)
PAGERDUTY_API_KEY=xxxxx
PAGERDUTY_SERVICE_ID=xxxxx

# ============================================================================
# EMAIL & NOTIFICATIONS
# ============================================================================

# SMTP for weekly reports and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=xxxxx
SMTP_FROM_EMAIL=milton-publicist@example.com

# Weekly report recipients (comma-separated)
REPORT_RECIPIENTS=milton.overton@example.com,team@example.com

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# Zapier Webhooks (for social media publishing)
# Get these URLs by creating Zaps at https://zapier.com/app/editor
# See ZAPIER_INTEGRATION_GUIDE.md for setup instructions
ZAPIER_LINKEDIN_WEBHOOK=https://hooks.zapier.com/hooks/catch/XXXXX/YYYYY/
ZAPIER_INSTAGRAM_WEBHOOK=https://hooks.zapier.com/hooks/catch/XXXXX/YYYYY/
ZAPIER_TWITTER_WEBHOOK=https://hooks.zapier.com/hooks/catch/XXXXX/YYYYY/
ZAPIER_FACEBOOK_WEBHOOK=https://hooks.zapier.com/hooks/catch/XXXXX/YYYYY/

# Legacy Zapier webhook (deprecated, use platform-specific webhooks above)
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxx

# n8n (optional, alternative to Zapier)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/milton-insights

# GitHub (for version control and CI/CD)
GITHUB_TOKEN=ghp_xxxxx
GITHUB_REPO=your-org/milton-publicist

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment: development | staging | production
ENVIRONMENT=development

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080

# Timezone (for scheduling)
TIMEZONE=America/New_York

# ============================================================================
# CONTENT STRATEGY
# ============================================================================

# Milton's thought leadership pillars (comma-separated)
THOUGHT_LEADERSHIP_PILLARS=AI Innovation in Sports Business,Leadership & Vision,Future of College Sports

# Primary platform for content
PRIMARY_PLATFORM=linkedin

# Secondary platforms (comma-separated)
SECONDARY_PLATFORMS=twitter,instagram

# Content posting frequency (posts per week)
TARGET_POSTS_PER_WEEK=5

# ============================================================================
# VOICE PROFILE CONFIGURATION
# ============================================================================

# Path to Milton's existing content for voice training
VOICE_TRAINING_CORPUS_PATH=./data/milton_content/

# Minimum voice authenticity score (0-1)
MIN_VOICE_AUTHENTICITY_SCORE=0.75

# Minimum brand alignment score (0-1)
MIN_BRAND_ALIGNMENT_SCORE=0.80

# Minimum engagement prediction score (0-1)
MIN_ENGAGEMENT_SCORE=0.60

# ============================================================================
# MEDIA MONITORING
# ============================================================================

# News monitoring interval (minutes)
MEDIA_MONITORING_INTERVAL=30

# Minimum relevance score for articles (0-1)
MIN_ARTICLE_RELEVANCE=0.6

# Keywords for monitoring (comma-separated)
MONITORING_KEYWORDS=NIL,conference realignment,athletic director,college sports technology,fan engagement,AI in sports,NCAA Division III

# News sources (comma-separated)
NEWS_SOURCES=ncaa,d3ticker,sbj,techcrunch_ai

# ============================================================================
# OPPORTUNITY SCANNING
# ============================================================================

# Opportunity scanning interval (hours)
OPPORTUNITY_SCAN_INTERVAL=24

# Minimum opportunity fit score (0-1)
MIN_OPPORTUNITY_FIT_SCORE=0.6

# Target opportunity sources (comma-separated)
OPPORTUNITY_SOURCES=nacda,sbj_events,podcast_directories,ai_conferences

# ============================================================================
# ANALYTICS & REPORTING
# ============================================================================

# Weekly report generation day (0=Monday, 6=Sunday)
REPORT_DAY=0  # Monday

# Weekly report generation time (24-hour format)
REPORT_TIME=09:00

# Share of Voice competitor ADs (comma-separated LinkedIn URLs)
SHARE_OF_VOICE_COMPETITORS=https://linkedin.com/in/competitor1,https://linkedin.com/in/competitor2

# Target LinkedIn engagement rate (percentage)
TARGET_LINKEDIN_ENGAGEMENT_RATE=5.0

# Target quarterly impressions growth (percentage)
TARGET_IMPRESSIONS_GROWTH=20.0

# Target monthly Power Four inbound inquiries
TARGET_MONTHLY_INQUIRIES=5

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Enable debug mode (verbose logging)
DEBUG=false

# Test mode (don't actually post to social media)
TEST_MODE=false

# Mock external APIs (for testing without API keys)
MOCK_EXTERNAL_APIS=false

# Database connection pool size
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis connection pool size
REDIS_POOL_SIZE=10
